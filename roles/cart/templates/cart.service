[Unit]
Description = Cart Service
[Service]
User=roboshop
Environment=REDIS_HOST={{ lookup('aws_ssm','{{env}}.cart_REDIS_HOST',region='us-east-1') }}
Environment=CATALOGUE_HOST={{ lookup('aws_ssm','{{env}}.cart_CATALOGUE_HOST',region='us-east-1') }}
Environment=CATALOGUE_PORT={{ lookup('aws_ssm','{{env}}.cart_CATALOGUE_PORT',region='us-east-1') }}
ExecStart=/bin/node /app/server.js
SyslogIdentifier=cart

[Install]
WantedBy=multi-user.target