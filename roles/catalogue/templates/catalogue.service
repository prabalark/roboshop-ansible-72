[Unit]
Description = Catalogue Service

[Service]
User=roboshop
Environment={{ lookup('aws_ssm','{{env}}.catalogue_MONGO',region='us-east-1') }}
Environment=MONGO_URL="{{ lookup('aws_ssm','{{env}}.catalogue_MONGO_URL',region='us-east-1') }}"
ExecStart=/bin/node /app/server.js
SyslogIdentifier=catalogue

[Install]
WantedBy=multi-user.target