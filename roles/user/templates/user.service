[Unit]
Description = User Service
[Service]
User=roboshop
Environment={{ lookup('aws_ssm','{{env}}.frontend.user_montru',region='us-east-1') }}
Environment=REDIS_HOST={{ lookup('aws_ssm','{{env}}.frontend.user_REDIS_HOST',region='us-east-1') }}
Environment=MONGO_URL="{{ lookup('aws_ssm','{{env}}.frontend.user_monurl',region='us-east-1') }}"
ExecStart=/bin/node /app/server.js
SyslogIdentifier=user

[Install]
WantedBy=multi-user.target